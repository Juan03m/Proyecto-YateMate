{% extends 'base.html.twig' %}

{% block title %}Seleccionar Bien{% endblock %}

{% block body %}
<div class="container" style="margin-top: 20px; color: #c2a26b;">
    <div class="text-center">
        <h1>Seleccionar Bien para Intercambio</h1>
        <p>Intercambia tu bien con {{ publicacion.titulo }}.</p>
        <a href="{{ path('app_bien_new') }}" class="btn btn-3" style="background-color: #c2a26b; margin-top: 20px;">Agregar Bien</a>
    </div>
    <div class="mt-4">
        <h2>Tus Bienes</h2>
        {% if bienes is empty %}
            <p>No tienes bienes registrados.</p>
        {% else %}
            <div class="row">
                {% for bien in bienes %}
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 text-center" style="max-width: 18rem;">
                            <img src="{{ asset('images/' ~ bien.image) }}" class="card-img-top" alt="{{ bien.nombre }}" style="object-fit: cover; height: 200px;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ bien.nombre }}</h5>
                                <p class="card-text">{{ bien.tipo }}</p>
                                <!-- BotÃ³n Seleccionar Bien -->
                                <div class="mt-auto">
                                    <a href="{{ path('app_solicitud_new', {'idPublicacion': publicacion.id, 'idBien': bien.id}) }}" class="btn btn-secondary">Seleccionar Bien</a>

                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
