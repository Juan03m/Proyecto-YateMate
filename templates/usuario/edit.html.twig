{% extends 'base.html.twig' %}

{% block title %}Editar datos de usuario{% endblock %}

{% block body %}
    {# mensajes flash success #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Exito!</strong> {{ message }}
            <button type="button" class="close" aria-label="Close" onclick="this.parentElement.style.display='none';">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    {% endfor %}
    {# mensajes flash failed #}
    {% for message in app.flashes('failed') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>¡Error!</strong> {{ message }}
        <button type="button" class="close" aria-label="Close" onclick="this.parentElement.style.display='none';">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    {% endfor %}
    <div class="centered-form">
        <h1 style="text-align: center;">Editar datos de usuario</h1>

        {{ form_start(form, {'attr': {'class': 'form-group'}})}}
            {{ form_row(form.email, {
                'attr': {'class': 'form-control', 'placeholder': 'Correo electrónico'}
            }) }}
            {{ form_row(form.dni, {
                'label': 'DNI',
                'attr': {'class': 'form-control', 'placeholder': 'Número de DNI'}
            }) }}
            {{ form_row(form.cuil, {
                'label': 'CUIL',
                'attr': {'class': 'form-control', 'placeholder': 'Número de CUIL'}
            }) }}
            {{ form_row(form.nombre, {
                'attr': {'class': 'form-control', 'placeholder': 'Nombre del usuario'}
            }) }}
            {{ form_row(form.apellido, {
                'label': 'Apellido',
                'attr': {'class': 'form-control'}
            }) }}
            {{ form_row(form.telefono, {
                'label': 'Teléfono',
                'attr': {'class': 'form-control'}
            }) }}
            {{ form_row(form.direccion, {
                'label': 'Dirección',
                'attr': {'class': 'form-control'}
            }) }}
            <button type="submit" class="btn btn-secondary" style="margin-top: 10px;" onclick="this.innerHTML='<span class=\'spinner-border spinner-border-sm\' role=\'status\' aria-hidden=\'true\'></span> Actualizando...'">Actualizar</button>

        {{ form_end(form) }}

    </div>
{% endblock %}
