<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
  {% block stylesheets %}
  {% endblock %}
  {% block javascripts %}
  {% endblock %}
</head>
<body>
  {% block nav %}
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      
      <a class="navbar-brand" href="{{ path('app_home_page') }}">
        <img src="{{ asset('images/logo_yatemate.png') }}" alt="Logo" style="height: 40px;">
        Sail 'n' Sale
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_publicacion_index') }}">Publicaciones</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('contacto') }}">Contactanos</a>
          </li>
        </ul>
        {% block search %} {% endblock %}
      </div>
      

      <div class="btn-group" role="group" aria-label="Basic outlined example">
        {% if app.user %}
            {# Usuario autenticado #}
            <a href="{{ path('app_home_page') }}" class="btn btn-outline-primary">Perfil</a>
        {% else %}
            {# Usuario no autenticado #}
            <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Iniciar sesión</a>
            <a href="{{ path('app_register') }}" class="btn btn-outline-primary">Registrarse</a>
        {% endif %}
      </div>
    </nav>
  </header>
  {% endblock %}
  {% block body %}
  {% endblock %}
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>